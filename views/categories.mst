<!doctype html>
<html lang="ru">
<head>
  <title>Modern - products</title>
  {{> head }}
  <script src="/javascripts/categories.js"></script>
</head>
<body>
    {{> header}}
  <div class="window">
    <div class="contents">
      <form class="form mb-3" id="searchForm">
      <h3>Категории:</h3>
        <div class="input-group">
          <input type="text" name="searchword" class="form-control" placeholder="Поиск" aria-label="Поиск" aria-describedby="basic-addon2">
          <div class="input-group-append">
            <button class="btn btn-primary" id="search" type="button">Найти</button>
          </div>
        </div>
        <small id="searchHelp" class="form-text text-muted"></small>
      </form>
        <div class="btn-group d-none" id="control" role="group">
            <button type="button" id="edit" data-toggle="modal" data-target="#createModal" class="btn btn-primary btn-md mx-2 mb-3">Создать категорию</button>
        </div>
    <table class="table" id="categoryList">
    </table>
    <div id="pagination">
    </div>
    </div>
</div>
{{> footer}}
{{! Modal }}
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="createModal" id="createModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Редактировать</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="createForm" class="needs-validation" novalidate>
          <div class="modal-body">
              <div class="form-group">
                  <label for="name">Название</label>
                  <input type="text" class="form-control" name="name" placeholder="Название категории">
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
            <button type="button" id="confirmCreate" class="btn btn-primary">Подтвердить</button>
          </div>
        </form>
    </div>
  </div>
</div>
</body>
</html>
