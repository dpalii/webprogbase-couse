<!doctype html>
<html lang="ru">
<head>
  <title>Modern - home</title>
  {{> head }}
</head>
<body>
    {{> header}}
  <div class="window">
    <div class="contents">
      <form method="post" action="/products/update/done" enctype="multipart/form-data">
      <fieldset>
        <legend>Изменить информацию о товаре</legend>
        Наименование:<br/>
        <input type="text" required name="prodname" value="{{prodname}}"><br/>
        Цена:<br/>
        <input type="number" required min="0" name="price" value="{{price}}"><br/>
        В наличии: <input type="checkbox" name="inStock" value="true"><br/>
        Изображение:<br/>
        <input type="file" name="prodpic" accept=".png,.jpg" value="{{prodpic}}"><br/>
        <input type="hidden" name="oldpic" value="{{prodpic}}">
        <input type="hidden" name="_id" value="{{_id}}">
        <input type="submit" value="Готово">
      </fieldset>
      <br/>
    </form>
    </div>
</div>
{{> footer}}
</body>
</html>