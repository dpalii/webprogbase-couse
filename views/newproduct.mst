<!doctype html>
<html lang="ru">
<head>
  <title>Modern - home</title>
  {{> head }}
</head>
<body>
    {{> header}}
  <div class="window">
    <div class="contents">
      <form method="post" action="/products/new" enctype="multipart/form-data">
      <fieldset>
        <legend>Новый товар</legend>
        Наименование:<br/>
        <input type="text" required name="prodname" value="Новый товар"><br/>
        Цена:<br/>
        <input type="number" required min="0" name="price" value="0"><br/>
        В наличии:<input type="checkbox" name="inStock" value="true"><br/>
        Добавлено:<br/>
        <input type="date" required name="uplDate"><br/>
        Изображение:<br/>
        <input type="file" name="prodpic" accept=".png,.jpg"><br/>
        <input type="hidden" name="category" value="{{category}}">
        <input type="submit" value="Готово">
      </fieldset>
      <br/>
    </form>
    </div>
</div>
{{> footer}}
</body>
</html>